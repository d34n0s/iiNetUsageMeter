        android:id="@+id/tv_usage_url" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100sp"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
