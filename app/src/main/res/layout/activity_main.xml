<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp">

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="User@iinet.net.au"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:hint="Your Password"
                android:inputType="textPassword"/>


    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:id="@+id/cb_show_password"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Credentials"
        android:id="@+id/cb_save_creds"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:text="Login"
        android:id="@+id/b_login" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_rawJson"
            android:text="Json"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </ScrollView>


    <TextView
        android:id="@+id/tv_authToken"
        android:text="authToken"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_serviceToken"
        android:text="serviceToken"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_url"
        android:text="URL"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</LinearLayout>
